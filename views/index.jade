extends layout

block body
  div(ng-controller='AppCtrl')
    h2 Hello {{person.first_name}}
    
    form(ng-submit="addTask()")
      input(type="text", ng-model="taskInput", ng-model-instant)
      input(type="submit", value="Submit")


    ul.menu
      li
        a(href='view1') view1
      li
        a(href='view2') view2

    div(ng-view)

    div
      | Angular seed app: v
      span(app-version)

  script(src='js/lib/jquery.min.js')
  script(src='js/lib/jquery-ui.min.js')
  script(src='js/lib/angular.min.js')
  script(src='js/lib/angular-dragdrop.js')
  script(src='js/lib/bootstrap.min.js')
  script(src='js/app.js')
  script(src='js/services.js')
  script(src='js/controllers/AppCtrl.js')
  script(src='js/filters.js')
  script(src='js/directives.js')
